# removes startup message
startup_message off 

# fix scrolling
termcapinfo screen|xterm-color|xterm|xterms|xs|rxvt ti@:te@

# Change scrollback to 10000 lines
defscrollback 10000

# # dirty hack: put xterm title escapes in the hardstatus
# # this example will yield "user@host || screen Win#:(windowtitle)
# http://superuser.com/a/154177/26281
defhstatus "$USER@^EH ^E:(^Et)"
# # now turn it off so it doesn't print in the hardstatus line
hardstatus off
# # and finally, use caption as a replacement hardstatus
caption always '%{= kG}[%{G}%H%{G}][%= %{= kw}%?%-Lw%?%{R}(%{W}%n*%f%t%?(%u)%?%{R})%{w}%?%+Lw%?%?%= %{G}][%{B}%C%a %M.%d%{G}]'

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock

multiuser on

# Make screen messages stand out a little more - black on bright green.
sorendition "+b kG"

# If a window goes unresponsive, don't block the whole session waiting for it.
defnonblock on

# Window numbering starts at 1, not 0.
bind c screen 1
bind 0 select 10
